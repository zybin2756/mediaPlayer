<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mediaplayer.activity.MainActivity">
    <utils.TitleBar
        android:background="#497be1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="26sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鱼饼影音"/>

        <EditText
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search_icon_selector"
            android:background="@drawable/search_bg_selector"
            android:drawablePadding="5dp"
            />
    </utils.TitleBar>
    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rb_bottom_group"
        android:background="#11000000"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_localvideo"
            android:drawableTop="@drawable/bottom_rb_localvideo_selector"
            android:text="@string/txt_localvideo"
            style="@style/bottom_rb_style"/>
        <RadioButton
            android:id="@+id/rb_localmusic"
            android:drawableTop="@drawable/bottom_rb_localvideo_selector"
            android:text="@string/txt_localmusic"
            style="@style/bottom_rb_style"/>
        <RadioButton
            android:id="@+id/rb_netvideo"
            android:drawableTop="@drawable/bottom_rb_localvideo_selector"
            android:text="@string/txt_netvideo"
            style="@style/bottom_rb_style"/>
        <RadioButton
            android:id="@+id/rb_netmusic"
            android:drawableTop="@drawable/bottom_rb_localvideo_selector"
            android:text="@string/txt_netmusic"
            style="@style/bottom_rb_style"/>
    </RadioGroup>
</RelativeLayout>
