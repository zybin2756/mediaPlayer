<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/img_video_item"
        android:layout_margin="8dp"
        android:src="@drawable/video_item_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/img_video_item"
        android:layout_toEndOf="@+id/img_video_item"
        android:text="视频名称"
        android:textSize="21sp"
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#aaa"
        android:layout_below="@+id/tv_video_name"
        android:layout_toRightOf="@+id/img_video_item"
        android:layout_toEndOf="@+id/img_video_item"
        android:text="大小"
        android:textSize="21sp"
        android:id="@+id/tv_video_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_below="@+id/tv_video_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#aaa"
        android:text="视频长度"
        android:textSize="21sp"
        android:id="@+id/tv_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
</RelativeLayout>