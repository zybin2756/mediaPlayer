<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mediaplayer.activity.MainActivity">
    <com.example.mediaplayer.base.TitleBar
        android:id="@+id/titleBar"
        android:background="#ff3097fd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_name"/>

        <TextView
            android:id="@+id/tv_search"
            android:clickable="true"
            android:textSize="16sp"
            android:text="搜索"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/search_icon_selector"
            android:drawableLeft="@drawable/search_icon_selector"
            android:background="@drawable/search_bg_selector"
            android:textColor="@drawable/search_txt_selector"
            android:drawablePadding="5dp"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/img_history"
            android:layout_margin="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rb_history_selector"
            tools:ignore="ContentDescription" />
    </com.example.mediaplayer.base.TitleBar>
    <FrameLayout
        android:layout_below="@+id/titleBar"
        android:id="@+id/fl_main"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rb_bottom_group"
        android:background="#ccc"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_localvideo"
            android:drawableTop="@drawable/bottom_rb_localvideo_selector"
            android:text="@string/txt_localvideo"
            style="@style/bottom_rb_style"/>
        <RadioButton
            android:id="@+id/rb_localmusic"
            android:drawableTop="@drawable/bottom_rb_localmusic_selector"
            android:text="@string/txt_localmusic"
            style="@style/bottom_rb_style"/>
        <RadioButton
            android:id="@+id/rb_netvideo"
            android:drawableTop="@drawable/bottom_rb_netvideo_selector"
            android:text="@string/txt_netvideo"
            style="@style/bottom_rb_style"/>
        <RadioButton
            android:id="@+id/rb_netmusic"
            android:drawableTop="@drawable/bottom_rb_netmusic_selector"
            android:text="@string/txt_netmusic"
            style="@style/bottom_rb_style"/>
    </RadioGroup>
</RelativeLayout>
